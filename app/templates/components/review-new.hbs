{{#if displayReviewForm}}
  <h3>New Review</h3>
  <form class="ui form" {{action 'saveReview' on='submit'}}>
    <div class="field">
      <label for="author">Author</label>
      {{input value=author id="author" required="required"}}
    </div>
    <div class="field">
      <label for="rating">Rating (From 1 to 5)</label>
      {{input type="number" value=rating id="rating" required="required" min="1" max="5"}}
    </div>
    <div class="field">
      <label for="content">Comments</label>
      {{textarea rows="3" value=content id="content" required="required"}}
    </div>
    <button class="ui button halfwidth" type="submit">Save Review</button>
    <button {{action 'hideReviewForm'}} type="button" class="ui right floated button halfwidth">Cancel</button>
    </form>
{{else}}
  <button {{action 'showReviewForm'}} type="button" class="ui button fullwidth">Review This Ipsum</button>
{{/if}}
