<table class="ui celled striped table">
  <thead>
    <tr><th>
      <h3>Reviews of This Ipsum (Omnis Enim Reprehendit)</h3>
      <p>Average Rating: {{ipsum.averageRating}} ({{ipsum.reviews.length}} Reviews)</p>
    </th>
  </tr></thead>
  <tbody>
    {{#if ipsum.reviews}}
      {{#each ipsum.reviews as |review|}}
        {{review-tile review=review}}
      {{/each}}
    {{else}}
      <tr>
        <td>
          <h4>No Reviews thus far. Please consider adding one.</h4>
        </td>
      </tr>
    {{/if}}
  </tbody>
</table>
<hr>
